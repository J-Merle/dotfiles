trim_string() {
    : "${1#"${1%%[![:space:]]*}"}"
    : "${_%"${_##*[![:space:]]}"}"
    printf '%s\n' "$_"
}

selection=$(lutris -l | awk -F '|' '{print $2}' | rofi -dmenu  -p "Lutris" -theme solarized )

id=$(trim_string "$(lutris -l | grep "$selection" | awk -F '|' '{print $1}')")

lutris lutris:rungameid/"$id"
